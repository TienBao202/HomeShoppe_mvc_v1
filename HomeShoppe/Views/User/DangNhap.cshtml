@model Model.CustomModel.LoginViewModel

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Content/website/js/controller/cartcontroller.js"></script>
}

@section DanhMuc{
    @{Html.RenderAction("DanhMucThuNho", "ProductCategory");}
}

@section breadcrumb{
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li class="active"> Đăng nhập thành viên</li>
            </ul>
        </div>
    </div>
}

<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div id="checkout-form" class="clearfix">
                <div class="col-md-6">
                    <div class="billing-details">

                        <div class="section-title">
                            <h3 class="title">Đăng nhập</h3>
                        </div>
                        @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                        {

                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <div class="form-group">
                                <label class="control-label col-md-3"></label>
                                <div class="col-md-9">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                                
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "input", @placeholder = " Nhập tên đăng nhập của bạn" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.PasswordFor(model => model.Password, new { @class = "input", @placeholder = "Nhập mật khẩu từ 6 đến 20 ký tự" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="primary-btn"> Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="shiping-methods">
                        <div class="section-title">
                            <h4 class="title">Đăng nhập </h4>
                        </div>
                        <p>
                            Đăng nhập để theo dõi đơn hàng, lưu danh sách sản phẩm yêu thích, nhận nhiều ưu đãi hấp dẫn.
                        </p>
                        <img src="~/img/images/Logo/register.png" />
                    </div>


                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->

@model Model.CustomModel.RegisterViewModel
@using BotDetect.Web.Mvc;

@{ MvcSimpleCaptcha registerCapcha = new MvcSimpleCaptcha("registerCapcha"); }


@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="/Content/website/js/controller/cartcontroller.js"></script>
}

@section DanhMuc{
    @{Html.RenderAction("DanhMucThuNho", "ProductCategory");}
}

@section breadcrumb{
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                <li class="active"> Đăng ký thành viên</li>
            </ul>
        </div>
    </div>
}

<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div id="checkout-form" class="clearfix">
                <div class="col-md-6">
                    <div class="billing-details">

                        <div class="section-title">
                            <h3 class="title">Thông tin thành viên</h3>
                        </div>
                        @using (Html.BeginForm("DangKy", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class =  "control-label col-md-3"></label>
                                    <div class="col-md-9">
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        @if (ViewBag.success != null)
                                        {
                                            <div class=" alert alert-success">@ViewBag.success </div>
                                        }
                                    </div>                                  
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "input", @placeholder = " Nhập tên đăng nhập của bạn" })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.PasswordFor(model => model.Password, new { @class = "input", @placeholder = " Mật khẩu từ 6 đến 20 ký tự" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input", @placeholder = " Vui lòng xác nhận mật khẩu đã nhập" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.FullName, new { @class = "input", @placeholder = " Nhập họ và tên của bạn" })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Address, new { @class = "input", @placeholder = " Nhập địa chỉ của bạn" })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "input", @placeholder = " Nhập địa chỉ Email của bạn" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class =  "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "input", @placeholder = " Vui lòng điền số điện thoại của bạn" })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Xác nhận Capcha", htmlAttributes: new { @class = "control-label col-md-3", @style = "font-size:smaller" })
                                    <div class="col-md-9">
                                        @Html.SimpleCaptcha(registerCapcha)
                                        @Html.TextBox("CaptchaCode")
                                    </div>
                                  
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="primary-btn"> Tạo tài khoản</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="shiping-methods">
                        <div class="section-title">
                            <h4 class="title">Tạo tài khoản</h4>
                        </div>
                        <p>
                            Tạo tài khoản để theo dõi đơn hàng, lưu danh sách sản phẩm yêu thích, nhận nhiều ưu đãi hấp dẫn.
                        </p>
                        <img src="~/img/images/Logo/register.png" />
                    </div>


                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->

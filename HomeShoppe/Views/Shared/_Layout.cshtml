<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    @*<title>HomeShoppe</title>*@

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/Content/website/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="/Content/website/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="/Content/website/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="/Content/website/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/Content/website/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/Content/website/css/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>

<body style="font-family:Roboto,Helvetica,Arial,sans-serif">
    <!-- HEADER -->
    <header>
        <!-- top Header -->
        @{Html.RenderAction("TopMenu_nav", "Home");}
        <!-- /top Header -->
        <!-- header -->
        <div id="header">
            <div class="container">
                <div class="pull-left">
                    <!-- Logo -->
                    <div class="header-logo">
                        <a class="logo" href="#">
                            <img src="~/img/images/Logo/logo.png" />

                        </a>
                    </div>
                    <!-- /Logo -->
                    <!-- Search -->
                    <div class="header-search">
                        <form>
                            <input class="input search-input" type="text" placeholder="Nhập từ khóa...">
                            <select class="input search-categories">
                                <option value="0">Tất cả</option>
                                <option value="1">Điện thoại - Máy tính bảng</option>
                                <option value="2">Laptop</option>
                            </select>
                            <button class="search-btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <!-- /Search -->
                </div>
                <div class="pull-right">
                    <ul class="header-btns">
                        <!-- Cart -->
                       @{Html.RenderAction("HomeCart", "Cart"); }
                        <!-- /Cart -->
                        <!-- Mobile nav toggle-->
                        <li class="nav-toggle">
                            <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
                        </li>
                        <!-- / Mobile nav toggle -->
                    </ul>
                </div>
            </div>
            <!-- header -->
        </div>
        <!-- container -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <div id="navigation">
        <!-- container -->
        <div class="container">
            <div id="responsive-nav">
                <!-- category nav -->
                @RenderSection("DanhMuc", required: false)
              
                <!-- /category nav -->
                <!-- menu nav -->
                @{Html.RenderAction("MainMenu_nav", "Home");}
                <!-- menu nav -->
            </div>
        </div>
        <!-- /container -->
    </div>
    <!-- /NAVIGATION -->
    <!-- HOME -->
    @RenderSection("slide", required: false)
    <!-- /HOME -->
    <!-- BREADCRUMB -->
    @RenderSection("breadcrumb", required: false)
    <!-- /BREADCRUMB -->
    <!-- Main -->
    @RenderBody()
    <!-- /Main -->
    <!-- FOOTER -->
    <footer id="footer" class="section section-grey">
        @{Html.RenderAction("Footer", "Home");}
    </footer>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <script src="/Content/website/js/jquery.min.js"></script>
    <script src="/Content/website/js/bootstrap.min.js"></script>
    <script src="/Content/website/js/slick.min.js"></script>
    <script src="/Content/website/js/nouislider.min.js"></script>
    <script src="/Content/website/js/jquery.zoom.min.js"></script>
    <script src="/Content/website/js/main.js"></script>

    @RenderSection("jsFooter", required:false)

</body>

</html>

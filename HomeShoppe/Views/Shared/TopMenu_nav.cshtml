@model List<Model.EF.Menu>

<div id="top-header">
    <div class="container">
        <div class="pull-left">
            <span> Chào bạn tới HomeShoppe !</span>
        </div>
        <div class="pull-right">
            @{ 
                var session =(Common.LoginDetail)Session[Common.CommonConstants.USER_SESSION];
            }

            @if (session == null)
            {
                <ul class="header-top-links">
                    @foreach (var item in Model)
                    {
                        <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
                    }
                </ul>
            }
            else
            {
                <ul class="header-top-links">
                    <!-- Account -->
                    <li class="header-account dropdown default-dropdown">
                        <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                            <strong class="text-uppercase"><i class="fa fa-user-o"></i> Xin chào: @session.UserName <i class="fa fa-caret-down"></i></strong>
                        </div>                      
                        <ul class="custom-menu">
                            <li><a style="font-size:small" href="/khach-hang/tai-khoan"><i class="fa fa-user-o"></i> Tài khoản của tôi</a></li>
                            <li><a style="font-size:small" href="/khach-hang/don-hang"><i class="fa fa-shopping-cart"></i> Đơn hàng của tôi</a></li>
                            <li><a style="font-size:small" href="#"><i class="fa fa-bell-o"></i> Thông báo của tôi</a></li>
                            <li><a style="font-size:small" href="#"><i class="fa fa-heart-o"></i> Sản phẩm yêu thích</a></li>
                            <li><a style="font-size:small" href="#"><i class="fa fa-comment-o"></i> Hỏi đáp</a></li>
                            <li><a style="font-size:small" href="@Url.Action("DangXuat", "User")"><i class="fa fa-unlock-alt"></i> Đăng xuất</a></li>
                        </ul>
                    </li>
                    <!-- /Account -->
                </ul>
            }

        </div>
    </div>
</div>

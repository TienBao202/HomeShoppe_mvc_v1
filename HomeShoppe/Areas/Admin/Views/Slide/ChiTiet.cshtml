@model Model.EF.Slide
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@section header{
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý trang hình ảnh</h3>
        </div>

        <div class="title_right">
            <div class="col-md-8 col-sm-5 col-xs-12 form-group pull-right top_search">
                @using (Html.BeginForm("Index", "Slide", FormMethod.Get))
                {
                    <div class="input-group">
                        <input type="text" class="form-control col-md-7 col-xs-12" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Tìm kiếm</button>
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thông tin hình ảnh</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div class="col-md-7 col-sm-7 col-xs-12">
                    <div class="product-image">
                        <img src="@Html.DisplayFor(model => model.Image)" alt="..." />
                    </div>
                </div>

                <div class="col-md-5 col-sm-5 col-xs-12" style="border:0px solid #e5e5e5;">
                    <h2>Thông tin hình ảnh</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width:50%">Mã hình ảnh: </th>
                                    <td>@Html.DisplayFor(model => model.ID)</td>
                                </tr>
                                <tr>
                                    <th>Tên hình ảnh:</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th>Thứ tự hiển thị:</th>
                                    <td>@Html.DisplayFor(model => model.DisplayOrder)</td>
                                </tr>
                                <tr>
                                    <th>Đường dẫn:</th>
                                    <td>@Html.DisplayFor(model => model.Link)</td>
                                </tr>
                                <tr>
                                    <th>Mô tả hình ảnh:</th>
                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                </tr>
                                <tr>
                                    <th>Ngày tạo:</th>
                                    <td>@Html.DisplayFor(model => model.CreatedDate) tháng</td>
                                </tr>
                                <tr>
                                    <th>Tình trạng:</th>
                                    <td><span class="badge @ViewBag.status_class">@ViewBag.status</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                   
                    <div class="ln_solid"></div>
                    <div class="">
                        <a href="@Url.Action("CapNhat", new { @id = Model.ID })" class="btn btn-primary btn-lg"><i class="fa fa-edit m-right-xs"></i> Chỉnh sửa thông tin</a>
                        <a href="@Url.Action("Index","Slide")" class="btn btn-danger btn-lg"><i class="fa fa-arrow-circle-left"></i> Danh sách hình ảnh</a>
                    </div>

                </div>


              
            </div>
        </div>
    </div>
</div>





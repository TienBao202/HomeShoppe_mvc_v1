@model Model.EF.Contact

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@section header{
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý trang liên hệ</h3>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="well" style="overflow: auto">
            <ul class="list-unstyled user_data">
                <li>
                    <h3> <i class="fa fa-briefcase user-profile-icon"></i> Mã Footer: @Html.DisplayFor(model => model.ID)</h3>
                </li>
                <li>
                    <i class="fa fa-check-square-o user-profile-icon"></i> Tình trạng: <span class="badge @ViewBag.status_class">@ViewBag.status</span>
                </li>
            </ul>
        </div>

    </div>
</div>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Xóa trang liên hệ</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @Html.Raw(Model.Content);
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" value="Xoa" class="btn btn-primary btn-lg"><i class="fa fa-trash-o m-right-xs"></i> Xóa trang liên hệ</button>
                            <a href="@Url.Action("Index","TrangLienHe")" class="btn btn-danger btn-lg"><i class="fa fa-arrow-circle-left"></i> Danh sách trang liên hệ</a>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

